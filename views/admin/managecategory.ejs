    <div class="category-text-container container-fluid" style="display: flex; justify-content: space-between;">
             <h4 style="    margin-top: 11px;" id="ManageProduct-text" >Manage Category</h4>
             <button type="submit " value="submit" class="btn" id="login-btn" style="float: right;"><a href="/admin/addCategory" style="text-decoration: none; color: #fff;" >Add Category</a></button>
    </div>
    <div>
        <div class="col-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                <h2 class="tm-block-title text-dark">Category</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Added Date</th>
                            <th scope="col" style="text-align: right;">Edit</th>
                            <th scope="col" style="text-align: right;">Delete</th>
                        
                        </tr>
                    </thead>
                    <tbody>
                        <%category.forEach((data,index)=>{%>
                            <tr>
                              <th scope="row">
                                <%=index+1%>
                                </th>
                                <td><%=data.name%></td>
                            
                              
                                <td> <%let Date1=new Date(data.date)%>
                                    <%-Date1.getDate()%>/<%-Date1.getMonth()%>/<%-Date1.getFullYear()%></td>
                              <td class="edits">
                                <span class="icon"  style="    float: right;"><a class="text-decoration-none text-secondary" href="/admin/editCategory?id=<%=data._id%>">&#9998;</a></span>
                              </td>
                              <td class="edits">
                                <span class="icon ml-3 delete"  style="    float: right;"><a class="text-decoration-none text-danger " href="/admin/deleteCategory?id=<%=data._id%>" onclick="return confirm('Are you sure')">&#128465;</a></span>
                              </td>
                            </tr>
                              <%})%>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>